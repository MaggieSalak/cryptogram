<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/vg_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cb_dark_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/language"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_language"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:minHeight="32dp"/>

            </LinearLayout>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:hint="@string/hint_puzzle_text"
                android:inputType="text|textCapSentences|textMultiLine"
                android:lines="4"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:hint="@string/hint_puzzle_author"
                android:inputType="text|textPersonName"
                android:lines="1"
                android:maxLines="1"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:hint="@string/hint_puzzle_topic"
                android:inputType="text|textCapWords"
                android:lines="1"
                android:maxLines="1"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cb_explicit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/explicit_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
