<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimaryLight">

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="?attr/colorPrimary"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/daily_puzzle"
                android:textAllCaps="true"
                android:textColor="@color/textLight"
                android:textSize="12sp"/>

            <com.pixplicity.cryptogram.views.CryptogramView
                android:id="@+id/cryptogram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_label"
                android:enabled="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:inverted="true"/>

            <View
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_label"
                android:background="@drawable/bg_overlay"/>

            <FrameLayout
                android:id="@+id/vg_daily_date"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="-3dp"
                android:background="@drawable/ic_date">

                <TextView
                    android:id="@+id/tv_daily_month"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    tools:ignore="SpUsage"
                    tools:text="OCT"/>

                <TextView
                    android:id="@+id/tv_daily_day"
                    android:layout_width="68dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:textColor="?attr/textColorOnPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="SpUsage"
                    tools:text="30"/>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_daily_author"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="?attr/textColorOnPrimary"
                android:textStyle="italic"
                tools:text="- Nelson Mandela"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/vg_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_subscribe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/subscription_expires"/>

        <Button
            android:id="@+id/bt_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-4dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:minHeight="32dp"
            android:text="@string/subscribe"
            android:textColor="@color/textLight"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vg_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_puzzles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/subscription_total_puzzles"/>

        <Button
            android:id="@+id/bt_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-4dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:minHeight="32dp"
            android:text="Archive"
            android:textColor="@color/textLight"/>

    </LinearLayout>

</LinearLayout>
