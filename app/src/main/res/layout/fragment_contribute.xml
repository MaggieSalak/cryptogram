<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        style="@style/InfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_contribute_add"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_contribute_add"
        android:text="@string/contribute_suggest_description"
        android:textSize="15sp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_suggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="56dp"
        android:text="@string/contribute_suggest"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        style="@style/InfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_contribute_review"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_contribute_review"
        android:text="@string/contribute_review_description"
        android:textSize="15sp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="56dp"
        android:text="@string/contribute_review"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
